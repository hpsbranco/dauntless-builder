{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dauntless-Builder Cell Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "slot": {
            "type": "string"
        },
        "variants": {
            "type": "object",
            "patternProperties": {
                "^\\+[1-3]\\s[A-Z](.*)\\sCell$": {
                    "type": "object",
                    "properties": {
                        "rarity": {
                            "type": "string"
                        },
                        "perks": {
                            "type": "object",
                            "patternProperties": {
                                "^[A-Z][a-z]+$": {
                                    "type": "number"
                                }
                            }
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["name", "slot", "variants"],
    "additionalProperties": false
}
