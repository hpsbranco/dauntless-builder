{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dauntless-Builder Lantern Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "description": {
            "type": ["string", "null"]
        },
        "cells": {
            "type": ["string", "null"]
        },
        "lantern_ability": {
            "type": "object",
            "properties": {
                "instant": {
                    "type": ["string", "null"]
                },
                "hold": {
                    "type": ["string", "null"]
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["name", "cells", "lantern_ability"],
    "additionalProperties": false
}
