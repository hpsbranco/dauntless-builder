{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dauntless-Builder Generic Mods Part Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "hidden": {
            "type": "boolean"
        },
        "part_effect": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "values": {
            "patternProperties": {
                "^.*$": {
                    "type": "number"
                }
            },
            "type": [
                "object",
                "null"
            ]
        }
    },
    "required": [
        "name",
        "icon",
        "part_effect"
    ],
    "additionalProperties": false
}
