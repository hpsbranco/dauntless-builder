{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "properties": {
        "cells": {
            "type": [
                "string",
                "null"
            ]
        },
        "description": {
            "type": "string"
        },
        "hidden": {
            "type": "boolean"
        },
        "i18n": {
            "patternProperties": {
                "^[a-z]{2}$": {
                    "properties": {
                        "description": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "unique_effects": {
                            "items": [
                                {
                                    "properties": {
                                        "description": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            ],
                            "type": "array"
                        }
                    },
                    "type": [
                        "object",
                        "null"
                    ]
                }
            },
            "type": [
                "object",
                "null"
            ]
        },
        "icon": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "perks": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "powerSurged": {
                        "type": "boolean"
                    },
                    "value": {
                        "type": "number"
                    }
                },
                "required": [
                    "name",
                    "value"
                ],
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "rarity": {
            "type": [
                "string",
                "null"
            ]
        },
        "resistance": {
            "properties": {
                "base": {
                    "type": "number"
                },
                "powerSurged": {
                    "type": "number"
                }
            },
            "required": [
                "base"
            ],
            "type": "object"
        },
        "strength": {
            "type": [
                "string",
                "null"
            ]
        },
        "type": {
            "type": "string"
        },
        "unique_effects": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "icon": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "name": {
                        "type": [
                            "string",
                            "array"
                        ]
                    },
                    "powerSurged": {
                        "type": "boolean"
                    },
                    "values": {
                        "patternProperties": {
                            "^.*$": {
                                "type": "number"
                            }
                        },
                        "type": [
                            "object",
                            "null"
                        ]
                    }
                },
                "required": [
                    "name",
                    "description"
                ],
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "weakness": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "required": [
        "name"
    ],
    "title": "Dauntless-Builder Armour Schema",
    "type": "object"
}
